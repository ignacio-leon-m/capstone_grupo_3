							"const response = pm.response.json();\r",
							"\r",
							"// Verifica si la respuesta es exitosa y contiene el token\r",
							"if (pm.response.code === 200 && response.jwt) { \r",
							"    // Guarda el token en una variable de entorno\r",
							"    pm.environment.set(\"jwt_token\", response.jwt);\r",
							"    console.log(\"JWT guardado exitosamente.\");\r",
							"} else {\r",
