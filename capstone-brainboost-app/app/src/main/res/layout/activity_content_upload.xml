<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentUploadRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvContentTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cargar PDF para IA"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtFileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Archivo: (no seleccionado)"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvContentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSelectFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar PDF"
        app:layout_constraintTop_toBottomOf="@id/txtFileName"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnGenerateSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar Resumen"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/txtFileName"
        app:layout_constraintStart_toEndOf="@id/btnSelectFile"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/btnGenerateQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar Quiz"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/txtFileName"
        app:layout_constraintStart_toEndOf="@id/btnGenerateSummary"
        android:layout_marginStart="12dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnSelectFile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/txtApiResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado..."
            android:padding="8dp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
