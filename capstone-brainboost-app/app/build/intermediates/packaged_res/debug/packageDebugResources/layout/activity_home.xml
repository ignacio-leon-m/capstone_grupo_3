<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BrainBoost • Inicio"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnContent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Visible para todos -->
    <Button
        android:id="@+id/btnContent"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Carga de Contenido (AI PDF)"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Visible para PROFESOR -->
    <Button
        android:id="@+id/btnUploadStudents"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Cargar Alumnos (Excel)"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnContent"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Visible para ADMIN -->
    <Button
        android:id="@+id/btnUsers"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Usuarios (Admin)"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnUploadStudents"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Cerrar sesión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUsers"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btnSubjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mis asignaturas"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
